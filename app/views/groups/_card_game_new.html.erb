<div class="card-dashboard">
  <div class="card-groupname text-center">
    <p> <%= game.group.name %> </p>
  </div>
  <div class="card-game">
    <p style="margin-bottom: 12px"> <%= game.group.user_groups.count %> Players </p>
    <p> <%= game.match.team_1 %>  </p>
    <div class="d-flex justify-content-center align-items-center m-1">
      <i class="fas fa-tshirt shirt-shadow" style="color: <%= game.match.home_color %>; "></i>
      <p class="mx-2 pb-1"> vs</p>
      <i class="fas fa-tshirt shirt-shadow" style="color: <%= game.match.away_color %>;"></i>
    </div>
    <p> <%= game.match.team_2 %> </p>
  </div>
</div>
