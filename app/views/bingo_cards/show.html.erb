<div class="bingo-container" style="padding: 0 clamp(0px, calc(40vw - 166px), 35vw)">
  <div class="before-grid">
  </div>
  <% if @bingo_tiles.count == 16 %>
    <div class="the-grid">
      <div class="grid">    
        <% (0..15).each do |index| %>          
          <div>
            <% bingo_tile = BingoTile.find_by(bingo_card: @bingo_card, position: index) %>
            <%= link_to game_bingo_card_bingo_tile_path(@game, @bingo_card, bingo_tile), class: "bingo-tile #{bingo_tile.status}", method: "patch" do %>
              <p style="font-size: clamp(12px, 3vw, 18px);"><%= bingo_tile.match_event.description %></p>
            <% end %>
          </div>          
        <% end %>
      </div>
    </div>
  <% else %>
    <h3>Your Bingo card will be created before the game begins.</h3>
  <% end %>
</div>
