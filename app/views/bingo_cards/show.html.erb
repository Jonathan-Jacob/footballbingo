<div class="bingo-container">
  <div class="before-grid">
    <div class="mt-5 header">
      <h1>Bingo Bingo Bingo</h1>
    </div>
  </div>
  <% if @bingo_tiles.count == 16 %>
    <div class="the-grid">
      <div class="grid">
        <% (0..15).each do |index| %>
          <div>
            <div class="bingo-tile"><p style="font-size:3.5vw;"><%= BingoTile.find_by(position: index).match_event.description %></p></div>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <h3>Your Bingo card will be created before the game begins.</h3>
  <% end %>

  <div class="container">
    <h3>Team-Chat</h3>
    <div class="container-chat" id="messages" data-chatroom-id="<%= @bingo_card.game.chatroom.id %>">
      <% @bingo_card.game.chatroom.messages.each do |message| %>
        <%= render "messages/message", message: message %>
      <% end %>
    </div>
    <br>
    <%= simple_form_for [@bingo_card.game.chatroom, @message], remote: true do |f| %>
    <%= f.input :content, label: false %>
    <% end %>
  </div>


</div>
