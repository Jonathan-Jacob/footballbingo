<div class="container">
    <h1 class="mt-5">Your Games</h1>
    <div class="d-flex justify-content-start">
      <% @bingo_cards.each do |bingo_card| %>
      <div class="card-dashboard m-3">
        <div class="card-groupname">
         <p>Batch 530 <%= bingo_card.game.group.name %> </p>
        </div>
        <div class="card-game">
          <p> <%= bingo_card.game.match.team_1 %> </p>
          <p>vs</p>
          <p> <%= bingo_card.game.match.team_2 %> </p>
          <p> <%= bingo_card.game.match.date_time %> </p>
        </div>
      </div>
      <% end %>
    </div>
  <div>
    <h1 class="mt-5">Your Groups</h1>
    <div class="d-flex justify-content-start">
      <% @groups.each do |group| %>
      <div class="card-dashboard m-3">
        <div class="card-groupname">
          <p> <%= group.name %> </p>
        </div>
        <div class="card-game">
          <p>35 Members ??? </p>
          <p>6 upcoming games ???? </p>
        </div>
      </div>
      <% end %>
      <div class="card-dashboard m-3">
        <div class="card-groupname">
          <p>Create a New Group</p>
        </div>
        <div class="card-game d-flex justify-content-center align-items-center">
          <div>
            <h1>
              <%= link_to new_group_path do %>
              <i class="fas fa-plus"></i>
              <% end %>
            </h1>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>



