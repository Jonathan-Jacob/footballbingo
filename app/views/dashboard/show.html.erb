<div class="container">
    <h1 class="mt-5">Your Games</h1>
    <div class="d-flex justify-content-start">

      <% @games.each do |game| %>
      <%= link_to group_game_path(game.group, game) do %>
      <div class="card-dashboard m-3">
        <div class="card-groupname">
          <p> <%= game.group.name %> </p>
        </div>
        <div class="card-game">
          <p> <%= game.group.user_groups.count %> Members </p>
          <p>  <%= game.match.team_1 %>  </p>
          <p>vs</p>
          <p>  <%= game.match.team_2 %> </p>
        </div>
      </div>
      <% end %>
      <% end %>

    </div>
  <div>
    <h1 class="mt-5">Your Groups</h1>
    <div class="d-flex justify-content-start">
      <% @groups.each do |group| %>
      <%= link_to group_path(group) do %>
      <div class="card-dashboard m-3">
        <div class="card-groupname">
          <p> <%= group.name %> </p>
        </div>
        <div class="card-game">
          <p> <%= pluralize(group.user_groups.count, 'Member') %> </p>
          <p>6 upcoming games ???? </p>
        </div>
      </div>
      <% end %>
      <% end %>
      <div class="card-dashboard m-3">
        <div class="card-groupname">
          <p>Create a New Group</p>
        </div>
        <div class="card-game d-flex justify-content-center align-items-center">
          <div>
            <h1>
              <%= link_to new_group_path do %>
              <i class="fas fa-plus"></i>
              <% end %>
            </h1>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>



