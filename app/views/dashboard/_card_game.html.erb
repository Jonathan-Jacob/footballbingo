<%= link_to game_bingo_card_path(bingo_card.game, bingo_card), class: "dashboard-link" do %>
  <div class="card-dashboard">
    <div class="card-groupname text-center">
      <p> <%= bingo_card.game.group.name %> </p>
    </div>
    <div class="card-game">
      <h6 style="margin-bottom: 12px"> <%= pluralize(bingo_card.game.bingo_cards.count, "Player") %></h6>
      <p> <%= bingo_card.game.match.team_1 %>  </p>
      <div class="d-flex justify-content-center align-items-center m-1">
        <i class="fas fa-tshirt shirt-shadow" style="color: <%= bingo_card.game.match.home_color %>;"></i>
        <p class="mx-2 pb-1"> vs</p>
        <i class="fas fa-tshirt shirt-shadow" style="color: <%= bingo_card.game.match.away_color %>;"></i>
      </div>
      <p> <%= bingo_card.game.match.team_2 %> </p>
    </div>
  </div>
<% end %>
